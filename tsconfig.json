{
    "exclude": ["vendor"],
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl": "./resources/js",
        "paths": {
            "~/*": ["*"],
            "@components/*": ["components/*"],
            "@type/*": ["types/*"],
            "@containers/*": ["containers/*"],
            "@api/*": ["api/*"],
            "@svg/*": ["svg/*"],
            "@hooks/*": ["hooks/*"],
            "@routes/*": ["routes/*"],
            "@queries/*": ["queries/*"],
            "@mutations/*": ["mutations/*"],
            "@menus/*": ["action-menus/*"]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "isolatedModules": true,
        "jsx": "react"
    }
}
